////////////////////////////////////////////////// example  - 2 ////////////////////////////////////////////////////////////////


class first {
    public static void main(String[] args) {

        String str1 = "a";       

        System.out.println(str1.matches("a|b"));      // the string that we match must be a or b, other than it return false.
    }
}

// output
// true



