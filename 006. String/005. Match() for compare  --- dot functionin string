///////////////////////////////////////////////////////// example  - 1 /////////////////////////////////////////////////////////////////

class first {
    public static void main(String[] args) {

        String str1 = "j";                        // when the string is only one character then it return true, other wise it return false.
  
        System.out.println(str1.matches("."));

    }
}

// output
// true


///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////// example  - 2 ////////////////////////////////////////////////////////////////////////////////////////

class first {
    public static void main(String[] args) {

        String str1 = "manish";                          // here we have more than one string, so it return false.
        
        System.out.println(str1.matches("."));

    }
}

// output
// false

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
